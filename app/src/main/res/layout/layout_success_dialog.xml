<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_alert_box">

    <RelativeLayout
        android:id="@+id/ll_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_image_success"
            android:layout_width="99dp"
            android:layout_height="83dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_success_dialog" />

        <TextView
            android:id="@+id/tv_title_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_image_success"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/roboto_bold"
            android:lineSpacingExtra="5sp"
            android:text="@string/you_are_all_set"
            android:textAlignment="center"
            android:textColor="@color/titleTextColorBlack"
            android:textSize="25sp" />

        <TextView
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/tv_description_success"
            android:layout_width="@dimen/_225sdp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_success"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/roboto_regular"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="3sp"
            android:text="@string/success"
            android:textAlignment="center"
            android:textColor="@color/titleTextColorBlack"
            android:textSize="14sp" />
    </RelativeLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_middle"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        app:mrl_rippleColor="@color/colorLightOrange">

        <Button
            android:id="@+id/btn_ok_success"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/btn_curve_orange"
            android:fontFamily="@font/roboto_bold"
            android:lineSpacingExtra="@dimen/_3sdp"
            android:text="@string/ok"
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:textSize="16sp">

        </Button>
    </com.balysv.materialripple.MaterialRippleLayout>

</RelativeLayout>