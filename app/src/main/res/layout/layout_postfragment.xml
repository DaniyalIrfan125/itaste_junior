<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.techbayportal.itaste.ui.fragments.postfragment.PostViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp">

                <LinearLayout
                    android:id="@+id/img_back"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.onBackButtonClicked()}">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:contentDescription="@string/back_icon"
                        android:src="@drawable/icon_backarrow"
                        app:tint="@color/mainIconColor" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_topText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="@string/new_post"
                    android:textColor="@color/titleTextColorBlack"
                    android:textSize="22sp">

                </TextView>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/ripple"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    app:mrl_rippleColor="@color/colorLightOrange">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="@{()-> viewModel.onPostBtnClicked()}"
                        android:padding="@dimen/_2sdp">

                        <TextView
                            android:id="@+id/tv_cornerText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/roboto_regular"
                            android:lineSpacingExtra="3sp"
                            android:text="@string/tv_post"
                            android:textColor="@color/colorOrange"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal" />
                    </RelativeLayout>
                </com.balysv.materialripple.MaterialRippleLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgView_post"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/img_placeholder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="3sp"
                        android:text="@string/tv_caption"
                        android:textColor="@color/titleTextColorBlack"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/ed_caption"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:backgroundTint="@color/color_darkGrey"
                        android:fontFamily="@font/roboto_light"
                        android:hint="@string/ed_write_something"
                        android:singleLine="true"
                        android:textColor="@color/titleTextColorBlack"
                        android:textColorHint="@color/titleTextColorBlack"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_errorCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/colorErrorRed"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/roboto_bold"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3sp"
                android:text="@string/tv_description"
                android:textColor="@color/titleTextColorBlack"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ed_description"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:textColor="@color/titleTextColorBlack"
                android:textColorHint="@color/titleTextColorBlack"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/ed_description_curve"
                android:gravity="top|start"
                android:textSize="13sp"
                android:hint="@string/tv_describe"
                android:inputType="textMultiLine"
                android:scrollbars="vertical" />
            <TextView
                android:id="@+id/tv_errorDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/colorErrorRed"
                android:textSize="12sp"
                android:visibility="gone" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/roboto_bold"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3sp"
                android:text="@string/tv_add_price"
                android:textColor="@color/titleTextColorBlack"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ed_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:backgroundTint="@color/color_darkGrey"
                android:fontFamily="@font/roboto_light"
                android:hint="@string/ed_write_desired_price"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/titleTextColorBlack"
                android:textColorHint="@color/titleTextColorBlack"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_errorPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/colorErrorRed"
                android:textSize="12sp"
                android:visibility="gone" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/roboto_bold"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3sp"
                android:text="@string/tv_how_long_will"
                android:textColor="@color/titleTextColorBlack"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ed_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:backgroundTint="@color/color_darkGrey"
                android:fontFamily="@font/roboto_light"
                android:hint="@string/ed_enter_valid_time"
                android:singleLine="true"
                android:textColor="@color/titleTextColorBlack"
                android:textColorHint="@color/titleTextColorBlack"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_errorTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/colorErrorRed"
                android:textSize="12sp"
                android:visibility="gone" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="horizontal"
                app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
                tools:listitem="@layout/item_timeduration" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/roboto_bold"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3sp"
                android:text="@string/tv_choose_category"
                android:textColor="@color/titleTextColorBlack"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation='vertical'>


            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/roboto_bold"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3sp"
                android:text="Add location"
                android:textColor="@color/titleTextColorBlack"
                android:textSize="14sp"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="2sp"
                    android:text="@string/tv_advance_Settings"
                    android:textColor="@color/colorOrange"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:src="@drawable/icon_arrow_down" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_allowComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_10sdp" />


                <TextView
                    android:id="@+id/tv_commentsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="2sp"
                    android:text="@string/ed_comments"
                    android:textColor="@color/titleTextColorBlack"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_commentsText"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/tv_once_you_turn_it_off"
                    android:textColor="@color/titleTextColorBlack"
                    android:textSize="10sp" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</layout>