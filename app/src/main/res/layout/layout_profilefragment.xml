<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.techbayportal.itaste.ui.fragments.profilefragment.ProfileViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/mainBackground">

        <RelativeLayout
            android:id="@+id/relative_top"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="@{()->viewModel.onBackButtonClicked()}"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:src="@drawable/icon_backarrow"
                    app:tint="@color/mainIconColor" />

                <TextView
                    android:id="@+id/tv_vendorUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="end"
                    android:textColor="@color/titleTextColorBlack"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_15sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="end"
                    android:text="@string/profile_settings"
                    android:textColor="@color/colorOrange"
                    android:textSize="14sp" />


            </LinearLayout>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relative_top"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <FrameLayout
                    android:id="@+id/relative_profileImage"
                    android:layout_width="@dimen/_81sdp"
                    android:layout_height="@dimen/_81sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/layout_relative_circle">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/sivProfileImage"
                        android:layout_width="@dimen/_78sdp"
                        android:layout_height="@dimen/_78sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_1sdp"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                        app:strokeColor="@color/colorWhite"

                        app:strokeWidth="@dimen/_1sdp" />

                    <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/spinKit"
                        style="@style/SpinKitView.Large.Pulse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:SpinKit_Color="@color/colorOrange" />

                    <RelativeLayout
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/layout_circle_orange">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_share"
                            app:tint="@color/colorWhite" />
                    </RelativeLayout>

                </FrameLayout>


                <LinearLayout
                    android:id="@+id/linear_profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative_profileImage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_crown"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginBottom="-4dp"
                        android:src="@drawable/img_crown" />

                    <TextView
                        android:id="@+id/tv_profileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:lineSpacingExtra="3sp"
                        android:textColor="@color/titleTextColorBlack"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_profileName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:lineSpacingExtra="2sp"
                    android:textAlignment="center"
                    android:textColor="@color/titleTextColorBlack"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/linear_followers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_details"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/roboto_bold"
                            android:lineSpacingExtra="3sp"
                            android:text="@string/posts"
                            android:textColor="@color/titleTextColorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_postCounts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:fontFamily="@font/roboto_bold"
                            android:lineSpacingExtra="3sp"
                            android:textColor="@color/titleTextColorBlack"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/roboto_bold"
                            android:lineSpacingExtra="3sp"
                            android:text="@string/likes"
                            android:textColor="@color/titleTextColorBlack"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_likesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/roboto_bold"
                            android:lineSpacingExtra="3sp"
                            android:textColor="@color/titleTextColorBlack"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:lineSpacingExtra="3sp"
                            android:text="@string/followers"
                            android:textColor="@color/titleTextColorBlack"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_followersCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:fontFamily="@font/roboto_bold"
                            android:lineSpacingExtra="3sp"
                            android:textColor="@color/titleTextColorBlack"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/linear_followers"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_25sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_update_payment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/btn_updatePayment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            app:mrl_rippleColor="@color/titleTextColorBlack"
                            android:onClick="@{()->viewModel.onUpdateButtonClicked()}">

                            <Button

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="6dp"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/btn_curve_small"
                                android:fontFamily="@font/roboto_regular"
                                android:lineSpacingExtra="@dimen/_3sdp"
                                android:text="Update Payment"

                                android:textAllCaps="false"
                                android:textColor="@color/titleTextColorBlack"
                                android:textSize="14sp">

                            </Button>
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_message_follow_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:visibility="gone"
                        >

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            app:mrl_rippleColor="@color/titleTextColorBlack">

                            <Button
                                android:id="@+id/btn_directMessage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="6dp"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/btn_direct_message_curve"
                                android:fontFamily="@font/roboto_regular"
                                android:lineSpacingExtra="@dimen/_3sdp"
                                android:text="@string/direct_message"
                                android:textAllCaps="false"
                                android:textColor="@color/colorBlack"
                                android:textSize="14sp">

                            </Button>
                        </com.balysv.materialripple.MaterialRippleLayout>

                        <com.balysv.materialripple.MaterialRippleLayout
                            android:id="@+id/ripple"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="1"
                            app:mrl_rippleColor="@color/colorLightOrange">

                            <Button
                                android:id="@+id/btn_follow"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="6dp"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/btn_orange_curve_profile"
                                android:fontFamily="@font/roboto_regular"
                                android:lineSpacingExtra="@dimen/_3sdp"
                                android:onClick="@{()->viewModel.onFollowButtonClicked()}"
                                android:text="@string/follow"
                                android:textAllCaps="false"
                                android:textColor="@color/colorBlack"
                                android:textSize="14sp">

                            </Button>
                        </com.balysv.materialripple.MaterialRippleLayout>
                    </LinearLayout>

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_profilePosts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/linear_buttons"
                    android:layout_marginTop="@dimen/_10sdp" />

                <LinearLayout
                    android:id="@+id/ll_noPosts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_buttons"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@color/noPostsBgColor"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/icon_no_posts"
                        app:tint="@color/noPostsTextColor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="@string/no_posts_yet"
                        android:textColor="@color/noPostsTextColor"
                        android:textSize="18sp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:layout_marginEnd="@dimen/_50sdp"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="center"
                        android:text="@string/there_is_nothing_to_show_yet_you_need_to_update_your_payment_to_start_posting"
                        android:textColor="@color/noPostsTextColor"
                        android:textSize="14sp">

                    </TextView>

                </LinearLayout>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>