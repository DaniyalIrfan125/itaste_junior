<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.techbayportal.itaste.ui.fragments.forgotpasswordfragment.ForgotPasswordFragmentViewModel" />
    </data>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/img_back"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:gravity="center"
                android:onClick="@{()->viewModel.onBackButtonClicked()}">

                <ImageView
                    app:tint="@color/mainIconColor"
                    android:id="@+id/btn_backForgot"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:onClick="@{()-> viewModel.onBackButtonClicked()}"
                    android:src="@drawable/icon_backarrow"/>
            </LinearLayout>

<!--//icon_emailiconorange-->
            <ImageView
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_forget_password" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/roboto_bold"
                android:lineSpacingExtra="5sp"
                android:text="@string/enter_your_phone_number"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/titleTextColorBlack"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/roboto_regular"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3sp"
                android:text="@string/a_verification_code_will_be_sent_to_your_contact_number"
                android:textColor="@color/titleTextColorBlack"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:orientation="horizontal">

                <!--icon_mail-->
                <ImageView
                    app:tint="@color/mainIconColor"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/icone_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="3sp"
                    android:text="@string/phone_number"
                    android:textAllCaps="true"
                    android:textColor="@color/titleTextColorBlack"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_21sdp"
                android:layout_marginEnd="@dimen/_21sdp"
                android:weightSum="2">

                <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                    android:id="@+id/et_country_code"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="0.6"
                    android:background="@drawable/ed_states"
                    android:fontFamily="@font/roboto_regular"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center"
                    android:gravity="center"

                    app:ccp_textColor="@color/titleTextColorBlack"
                    app:ccp_textFont="roboto_regular.ttf"
                    app:ccp_textSize="@dimen/_10sdp"
                    app:ccp_hideNameCode="true"
                    app:ccp_showFlag="false"
                    app:ccp_defaultNameCode="AE"
                    app:ccp_keyboardAutoPopOnSearch="false"
                    app:ccp_backgroundColor="@color/mainBackground"
                    app:ccp_dialogTextColor="@color/titleTextColorBlack"/>


                <EditText
                    android:id="@+id/ed_phoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1.4"
                    android:background="@drawable/ed_blackboundary"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/_0555_5555"
                    android:inputType="phone"
                    android:imeOptions="actionNext"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:singleLine="true"
                    android:textColor="@color/titleTextColorBlack"
                    android:textColorHint="@color/titleTextColorBlack"
                    android:textSize="13sp" />


            </LinearLayout>

            <EditText
                android:id="@+id/ed_forgotPasswordEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/ed_states"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/enter_your_email"
                android:imeOptions="actionNext"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:singleLine="true"
                android:textColor="@color/titleTextColorBlack"
                android:textColorHint="@color/titleTextColorBlack"
                android:textSize="13sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_errorForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/colorErrorRed"
                android:textSize="12sp"
                android:visibility="gone" />


            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                app:mrl_rippleColor="@color/colorLightOrange">

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/btn_curve_orange"
                    android:fontFamily="@font/roboto_bold"
                    android:lineSpacingExtra="@dimen/_3sdp"
                    android:onClick="@{()-> viewModel.onNextButtonClicked()}"
                    android:text="@string/next"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp">

                </Button>
            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>
    </RelativeLayout>

</layout>