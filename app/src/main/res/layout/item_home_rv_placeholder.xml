<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_profile"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@color/shimmer_item_color"
            app:strokeColor="@color/shimmer_item_color"
            android:scaleType="centerCrop"
            app:strokeWidth="@dimen/_1sdp"
            android:padding="@dimen/_1sdp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />


        <ImageView
            app:tint="@color/mainIconColor"
            android:id="@+id/img_dots"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"

            android:background="@color/shimmer_item_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toStartOf="@+id/img_dots"
            android:layout_toEndOf="@+id/img_profile"
            android:orientation="vertical">



            <TextView
                android:id="@+id/tv_profileName"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingExtra="3sp"
               android:layout_marginBottom="@dimen/_3sdp"
                android:textColor="@color/titleTextColorBlack"
                android:background="@color/shimmer_item_color"
                android:textSize="16sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_14sdp"
                android:orientation="horizontal"
                android:background="@color/shimmer_item_color">

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/recycler_images"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/relative_top">
        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:background="@color/shimmer_item_color"/>

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:background="@color/shimmer_item_color"/>

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:background="@color/shimmer_item_color"/>

        <ImageView

            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:background="@color/shimmer_item_color"/>

        <ImageView

            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:background="@color/shimmer_item_color"/>

    </LinearLayout>




</RelativeLayout>